<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/titul">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/bt_intent_registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="564dp"
                android:layout_marginEnd="0dp"
                android:src="@drawable/registr"
                android:textSize="27sp"
                android:textStyle="italic" />

            <ImageButton
                android:id="@+id/bt_intent_login"
                android:layout_width="172dp"
                android:layout_height="78dp"
                android:layout_below="@+id/text_notUsage"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginStart="45dp"

                android:layout_marginTop="-6dp"
                android:layout_marginEnd="111dp"
                android:scaleType="centerCrop"
                android:src="@drawable/vhod"
                android:text="ВОЙТИ"
                android:textSize="31sp"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/text_notUsage"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_below="@+id/bt_intent_registration"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="51dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="27dp"
                android:src="@drawable/notused" />

        </RelativeLayout>
    </ScrollView>


</FrameLayout>