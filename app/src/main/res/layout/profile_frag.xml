<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/r1_profile"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_list">

            <TextView
                android:id="@+id/tv_userNameSurname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/layout_bg"
                android:gravity="center_horizontal"
                android:text="Имя и фамилия"
                android:textColor="#284850"
                android:textSize="50sp"
                android:textStyle="bold" />


        </RelativeLayout>




    <RelativeLayout
        android:layout_below="@+id/r1_profile"
        android:id="@+id/r3_profile"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginTop="50dp">
        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/rv_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/r3_profile"
            android:id="@+id/r2_profile"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/profile_list2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Статистика:"
                android:layout_marginTop="15dp"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tv_profile_statistics_museums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Пройдено музеев: "
                android:textColor="@color/black"
                android:layout_marginTop="65dp"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tv_profile_statistics_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Оставлено комментариев:"
                android:layout_marginTop="100dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/tv_profile_statistics_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Всего получено очков:"
                android:layout_marginTop="135dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"/>
        </RelativeLayout>


    </RelativeLayout>




</ScrollView>