<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_bg">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textColor="@color/colorAccent"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_comment_time"
        android:textSize="15dp"/>

    <TextView
        android:layout_below="@+id/tv_comment_time"
        android:id="@+id/tv_firstName_comment"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ocenka"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/black"
        android:textSize="20dp"/>

    <TextView
        android:layout_below="@+id/tv_comment_time"
        android:id="@+id/tv_ocenka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="15dp"
        android:layout_toLeftOf="@+id/tv_firstName_comment"
        android:layout_toEndOf="@+id/tv_firstName_comment"
        android:layout_marginBottom="15dp"
        android:textSize="25dp" />

</RelativeLayout>